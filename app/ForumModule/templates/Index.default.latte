{foreach $categories as $category}
	<h1>{$category->name}</h1>
	{foreach $category->forums as $forum}
		<h2>{$forum->name} (id: {$forum->id})</h2>
		<p>Topics: {$forum->topicsCount}</p>
		<p>Posts: {$forum->postsCount}</p>
		<p>
			Last post:
			{if $forum->lastPost}
				{$forum->lastPost->posted|date} (id: {$forum->lastPost->id})
				by {$forum->lastPost->author}
			{else}
				Never
			{/if}
		</p>
		<p>{$forum->description}</p>
	{/foreach}
{/foreach}
