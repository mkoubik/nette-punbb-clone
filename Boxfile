global:
    env:
        APP_NAME: nette-punbb-clone

web1:
    name: nette-punbb-clone
    shared_writable_dirs: [ temp, log ]
    document_root: www
    php_extensions:
        - pdo_mysql
        - intl
        - tokenizer
    after_build:
        - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install"
    after_deploy:
        - "rm -rf temp/cache"

db1:
    name: punbb
    type: mysql
